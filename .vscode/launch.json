    "version": "0.2.0",
    "configurations": [
        {
    "name": "Launch Program with Arguments",
    "type": "cppdbg",
    "request": "launch",
    "program": "${workspaceFolder}/Client/client.exe", // Adjust this path to your executable
    "args": ["client", "server"], // <-- Add your arguments here
    "stopAtEntry": false,
    "cwd": "${workspaceFolder}\\Client", // Adjust this to your working directory
    "environment": [],
    "externalConsole": false,
    "MIMode": "gdb", // Or "lldb" or "msvc" depending on your setup
    "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    ]
}
        ]
    }